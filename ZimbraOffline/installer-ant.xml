<project name="Offline-Installer" default="installer-make">

	<taskdef name="install4j" classname="com.install4j.Install4JTask" classpath="/usr/local/install4j/bin/ant.jar"/>

	<target name="installer-clean" description="Removes build files and undeploys extension">
		<delete dir="build" includes="zdesktop*intel*" />
	</target>

	<target name="installer-pack-media">
                <antcall target="installer-clean"/>
		<install4j projectfile="ZimbraOffline.install4j" verbose="true"/>
        </target>

	<target name="installer-make">
                <ant dir="." target="offline-make-install-files" inheritAll="false"/>
                <antcall target="installer-pack-media"/>
	</target>

</project>

