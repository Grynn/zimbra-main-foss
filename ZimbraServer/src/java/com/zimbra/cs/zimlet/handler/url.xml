<zimlet>
	<name>url</name>
	<version>1.0</version>
	<description>URL</description>

	<serverExtension>
		<hasKeyword>url</hasKeyword>
		<extensionClass>com.zimbra.cs.zimlet.handler.URLHandler</extensionClass>
	</serverExtension>
	<contentObject>
		<matchOn>
			<regex>/((telnet:)|((https?|ftp|gopher|news|file):\/\/)|(www\.[\w\.\_\-]+))[^\s\xA0\(\)\<\>\[\]\{\}\'\"]*/ig</regex>
		</matchOn>

		<onClick>
 		    <canvas style=”window”/>
			<actionUrl method=”get” target=”${objectContent}” />
		</onClick>

		<toolTip width=”205” height=”150”>
 		    <canvas style=”inline”/>
			<actionUrl target=”'http://pthumbnails.alexa.com/image_server.cgi?id=' + document.domain + '&url=' + ${objectContent}” />
		</toolTip>
	</contentObject>
</zimlet>

