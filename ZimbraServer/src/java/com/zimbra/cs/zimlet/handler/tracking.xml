<zimlet>
	<name>tracking</name>
	<version>1.0</version>
	<description>Shippment Tracking</description>

	<serverExtension>
		<hasKeyword>tracking</hasKeyword>
		<extensionClass>com.zimbra.cs.zimlet.handler.TrackingHandler</extensionClass>
	</serverExtension>
	<contentObject>
		<matchOn>
			<regex>/\\b(?:1[zZ]\\s?\\w{3}\\s?\\w{3}\\s?\\w{2}\\s?\\w{4}\\s?\\w{3}\\s?\\w{1}|(\\d{12}|\\d{22}))\\b/ig</regex>
		</matchOn>

		<onClick>
 		    <canvas style=”window”/>
			<actionUrl method=”get” target=”http://wwwapps.ups.com/WebTracking/processInputRequest?sort_by=status&tracknums_displayed=1&TypeOfInquiryNumber=T&loc=en_US&InquiryNumber1=${objectContent}&track.x=0&track.y=0” />
		</onClick>
	</contentObject>	
</zimlet>

