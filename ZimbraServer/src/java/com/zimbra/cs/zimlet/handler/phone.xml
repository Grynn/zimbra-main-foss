<zimlet>
	<name>phone</name>
	<version>1.0</version>
	<description>Phone Number</description>

	<serverExtension>
		<hasKeyword>phone</hasKeyword>
		<extensionClass>com.zimbra.cs.zimlet.handler.NANPHandler</extensionClass>
	</serverExtension>
	<contentObject>
		<matchOn>
			<regex>/(^|\W)(?:(?:\(\d{3}\)[-.\s]?|\d{3}[-.\s]))?\d{3}[-.\s]\d{4}(\W|$)/g</regex>
		</matchOn>

		<onClick>
			<canvas type=”window” />
			<actionJavaScript />
		</onClick>
	</contentObject>
	<contextMenu>
		<menuItem label=”${msg.search}” icon=”search.gif” id=”SEARCH”>
			<actionJavaScript/>
		</menuItem>
		<menuItem label=”${msg.addcontact}” icon=”addcontact.gif” id=”ADDCONTACT”>
			<actionJavaScript/>
		</menuItem>
		<menuItem label=”${msg.call}” icon=”call.gif” id=”CALL”>
			<actionJavaScript/>
		</menuItem>
	</contextMenu>
	<zimletPanelItem label=”${msg.call}” icon=”call.gif”>
		<toolTipText>${msg.panelTooltipText}</toolTipText>
		<dragSource type=”ZmContact”>
			<actionJavaScript/> 
		</dragSource>
	</zimletPanelItem>
</zimlet>

