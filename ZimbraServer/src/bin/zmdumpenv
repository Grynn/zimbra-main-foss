source /opt/zimbra/bin/zmshutil || exit 1
zmsetvars


echo "----------------"
date +%Y%m%d%H%M%S
echo "----------------"
id
echo "----------------"
uname -a
echo "----------------"
hostname
echo "----------------"
/opt/zimbra/bin/zmhostname
echo "----------------"
P=`/opt/zimbra/bin/get_plat_tag.sh`
echo $P
echo "----------------"
df -h
echo "----------------"
/sbin/ifconfig
echo "----------------"

if [ x$P = "xMACOSX" -o "x$P" = "xMACOSXx86" ]; then
	ls -ld /Library/Receipts/zimbra-*
else
	rpm -qi zimbra-core
fi
echo "----------------"
ls -l /opt/zimbra
echo "----------------"
uptime
echo "----------------"
memkb=$(zmsysmemkb)
echo $memkb KB
echo "----------------"
cat /etc/hosts
echo "----------------"
cat /etc/resolv.conf
echo "----------------"
/etc/nsswitch.conf
echo "----------------"
