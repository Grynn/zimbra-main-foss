BASE=/opt/zimbra
APACHECTL=$BASE/httpd/bin/apachectl
CONF=$BASE/conf/httpd.conf
PIDFILE=$BASE/log/httpd.pid

case "$1" in
	start)
		if [ -f $APACHECTL ]; then
			$APACHECTL -k $1 -f $CONF
			exit $?
		fi
		exit 0
	;;
  reload|graceful)
		if [ -f $APACHECTL ]; then
			$APACHECTL -k graceful -f $CONF
			exit $?
		fi
		exit 0
	;;
  restart)
    $0 stop
    $0 start
  ;;
	stop)
		if [ -f $PIDFILE ]; then
			if [ -f $APACHECTL ]; then
				$APACHECTL -k $1 -f $CONF
				exit $?
			fi
		fi
		exit 0
	;;
	status)
    if [ -f $PIDFILE ]; then
		  pid=$(cat $PIDFILE)
      if [ x"$pid" = "x" ]; then
        echo "Apache not running."
        exit 1
      fi
    else
      echo "Apache not running.  No PID file found."
      exit 1
    fi
		kill -0 $pid
    if [ $? = 0 ]; then
      echo "Apache running with PID $pid"
      exit 0
    else 
      echo "Apache not running."
		  exit 1
    fi
	;;
	*)
		echo "$0 start|stop|restart|reload|graceful|status"
		exit 1
	;;
esac
