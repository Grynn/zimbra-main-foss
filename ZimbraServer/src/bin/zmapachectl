BASE=/opt/zimbra
APACHECTL=$BASE/httpd/bin/apachectl
CONF=$BASE/conf/httpd.conf
PIDFILE=$BASE/log/httpd.pid

case "$1" in
	start)
		if [ -f $APACHECTL ]; then
			$APACHECTL -k $1 -f $CONF
			exit $?
		fi
		exit 0
	;;
  reload|graceful)
		if [ -f $APACHECTL ]; then
			$APACHECTL -k graceful -f $CONF
			exit $?
		fi
		exit 0
	;;
	stop)
		if [ -f $PIDFILE ]; then
			if [ -f $APACHECTL ]; then
				$APACHECTL -k $1 -f $CONF
				exit $?
			fi
		fi
		exit 0
	;;
	status)
		pid=`cat $PIDFILE`
		kill -0 $pid
		exit $?
	;;
	*)
		echo "$0 start|stop|reload|graceful|status"
		exit 1
	;;
esac
