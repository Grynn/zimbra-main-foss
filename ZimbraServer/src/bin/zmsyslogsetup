# ***** END LICENSE BLOCK *****

source `dirname $0`/../bin/zmshutil || exit 1

ID=`id -u`

if [ $ID -ne 0 ]; then
	echo "Run as root!"
	echo ""
	exit 1
fi

platform=`/opt/zimbra/libexec/get_plat_tag.sh`

zmsetvars \
	zimbra_tmp_directory

if [ ! -d ${zimbra_tmp_directory} ]; then
  mkdir -p ${zimbra_tmp_directory} > /dev/null 2>&1
fi

if [ x"$(uname -s 2> /dev/null)" = "xDarwin" ]; then
	logfile="/var/log/zimbra.log"
	statsfile="/var/log/zimbra-stats.log"
	LOCALHOST=`hostname`
else
	logfile="-/var/log/zimbra.log"
	statsfile="-/var/log/zimbra-stats.log"
	LOCALHOST=`hostname --fqdn`
fi
LOGHOST=`su - zimbra -c '/opt/zimbra/bin/zmprov -l gacf | egrep "^zimbraLogHostname"'`

if [ "x$LOGHOST" = "x" ]; then
	TYPE="local"
else
	LOGHOST=`echo $LOGHOST | awk '{print $2}'`
	if [ x$LOGHOST = "x$LOCALHOST" ]; then
		TYPE="local"
	else
		TYPE="remote"
	fi
fi

usage() {
	echo ""
	echo "$0: set up syslog.conf for local or remote logging"
	echo ""
	echo "Usage:"
	echo "	$0"
	echo ""
	exit 1
}

if [ "x$platform" = "xopenSUSE_10.2" ]; then
	cp -f /etc/syslog-ng/syslog-ng.conf /etc/syslog-ng/syslog-ng.conf.bak
	grep -v zimbra /etc/syslog-ng/syslog-ng.conf > ${zimbra_tmp_directory}/syslog-ng.conf
	echo 'filter f_local0       { facility(local0); }; # zimbra' >> ${zimbra_tmp_directory}/syslog-ng.conf
	echo 'filter f_local1       { facility(local1); }; # zimbra' >> ${zimbra_tmp_directory}/syslog-ng.conf
	echo 'destination zmail { file("/var/log/zimbra.log" owner("zimbra") ); }; # zimbra ' >> ${zimbra_tmp_directory}/syslog-ng.conf
	echo 'destination zmstats { file("/var/log/zimbra-stats.log" owner("zimbra") ); }; # zimbra ' >> ${zimbra_tmp_directory}/syslog-ng.conf
	echo 'log { source(src); filter(f_mail); destination(zmail); }; # zimbra' >> ${zimbra_tmp_directory}/syslog-ng.conf
	echo 'destination local0 { file("/var/log/zimbra.log" owner("zimbra") ); }; # zimbra' >> ${zimbra_tmp_directory}/syslog-ng.conf
	echo 'log { source(src); filter(f_local0); destination(local0); }; # zimbra' >> ${zimbra_tmp_directory}/syslog-ng.conf
	echo 'log { source(src); filter(f_local1); destination(zmstats); }; # zimbra' >> ${zimbra_tmp_directory}/syslog-ng.conf
	echo 'filter f_auth       { facility(auth); }; # zimbra' >> ${zimbra_tmp_directory}/syslog-ng.conf
	echo 'destination zmauth { file("/var/log/zimbra.log" owner("zimbra") ); }; # zimbra' >> ${zimbra_tmp_directory}/syslog-ng.conf
	echo 'log { source(src); filter(f_auth); destination(zmauth); }; # zimbra' >> ${zimbra_tmp_directory}/syslog-ng.conf
	mv -f ${zimbra_tmp_directory}/syslog-ng.conf /etc/syslog-ng/syslog-ng.conf
	/sbin/rcsyslog restart > /dev/null 2>&1
	if [ -f "/etc/logrotate.d/zimbra" ]; then
		sed -i -e 's/syslogd/syslog-ng/' /etc/logrotate.d/zimbra
	fi
	touch /var/log/zimbra.log
	touch /var/log/zimbra-stats.log
	exit 0
fi

if [ x$platform = "xSuSE10" -o "x$platform" = "xSLES10_64" -o "x$platform" = "xSuSEES10" ]; then
	cp -f /etc/syslog-ng/syslog-ng.conf.in /etc/syslog-ng/syslog-ng.conf.in.bak
	grep -v zimbra /etc/syslog-ng/syslog-ng.conf.in > ${zimbra_tmp_directory}/syslog-ng.conf.in
	echo 'filter f_local0       { facility(local0); }; # zimbra' >> ${zimbra_tmp_directory}/syslog-ng.conf.in
	echo 'filter f_local1       { facility(local1); }; # zimbra' >> ${zimbra_tmp_directory}/syslog-ng.conf.in
	echo 'destination zmail { file("/var/log/zimbra.log" owner("zimbra") ); }; # zimbra ' >> ${zimbra_tmp_directory}/syslog-ng.conf.in
	echo 'destination zmstats { file("/var/log/zimbra-stats.log" owner("zimbra") ); }; # zimbra ' >> ${zimbra_tmp_directory}/syslog-ng.conf.in
	echo 'log { source(src); filter(f_mail); destination(zmail); }; # zimbra' >> ${zimbra_tmp_directory}/syslog-ng.conf.in
	echo 'destination local0 { file("/var/log/zimbra.log" owner("zimbra") ); }; # zimbra' >> ${zimbra_tmp_directory}/syslog-ng.conf.in
	echo 'log { source(src); filter(f_local0); destination(local0); }; # zimbra' >> ${zimbra_tmp_directory}/syslog-ng.conf.in
	echo 'log { source(src); filter(f_local1); destination(zmstats); }; # zimbra' >> ${zimbra_tmp_directory}/syslog-ng.conf.in
	echo 'filter f_auth       { facility(auth); }; # zimbra' >> ${zimbra_tmp_directory}/syslog-ng.conf.in
	echo 'destination zmauth { file("/var/log/zimbra.log" owner("zimbra") ); }; # zimbra' >> ${zimbra_tmp_directory}/syslog-ng.conf.in
	echo 'log { source(src); filter(f_auth); destination(zmauth); }; # zimbra' >> ${zimbra_tmp_directory}/syslog-ng.conf.in
	mv -f ${zimbra_tmp_directory}/syslog-ng.conf.in /etc/syslog-ng/syslog-ng.conf.in
	/sbin/SuSEconfig --module syslog-ng
	if [ -f "/etc/logrotate.d/zimbra" ]; then
		sed -i -e 's/syslogd/syslog-ng/' /etc/logrotate.d/zimbra
	fi
	touch /var/log/zimbra.log
	touch /var/log/zimbra-stats.log
	exit 0
fi

cp -f /etc/syslog.conf /etc/syslog.conf.bak

# Remove existing entries that we may have added.
grep -v "^local0\.\*" /etc/syslog.conf | grep -v "^local1\.\*" > ${zimbra_tmp_directory}/syslog.zimbra
sed -i -e '/^auth\.\* /d' ${zimbra_tmp_directory}/syslog.zimbra
sed -i -e 's/;local0.none//g' ${zimbra_tmp_directory}/syslog.zimbra
sed -i -e 's/;local1.none//g' ${zimbra_tmp_directory}/syslog.zimbra
sed -i -e 's/;auth.none//g' ${zimbra_tmp_directory}/syslog.zimbra

# Don't log local0 and auth twice 
sed -i -e 's/^*.info/*.info;local0.none;local1.none;auth.none/' ${zimbra_tmp_directory}/syslog.zimbra

if [ $TYPE = "remote" ]; then
      echo "local0.*                @$LOGHOST" >> ${zimbra_tmp_directory}/syslog.zimbra
      echo "local1.*                @$LOGHOST" >> ${zimbra_tmp_directory}/syslog.zimbra
      echo "auth.*                  @$LOGHOST" >> ${zimbra_tmp_directory}/syslog.zimbra
fi
echo "local0.*                $logfile" >> ${zimbra_tmp_directory}/syslog.zimbra
echo "local1.*                $statsfile" >> ${zimbra_tmp_directory}/syslog.zimbra
echo "auth.*                  $logfile" >> ${zimbra_tmp_directory}/syslog.zimbra
touch /var/log/zimbra.log
touch /var/log/zimbra-stats.log
chown zimbra:zimbra /var/log/zimbra.log
chown zimbra:zimbra /var/log/zimbra-stats.log
chmod 644 /var/log/zimbra.log

egrep -v "^mail.*($LOGHOST|zimbra)" ${zimbra_tmp_directory}/syslog.zimbra > ${zimbra_tmp_directory}/syslog.zimbra2

if [ $TYPE = "remote" ]; then
      echo "mail.*                @$LOGHOST" >> ${zimbra_tmp_directory}/syslog.zimbra2
fi
echo "mail.*                $logfile" >> ${zimbra_tmp_directory}/syslog.zimbra2

cp -f ${zimbra_tmp_directory}/syslog.zimbra2 /etc/syslog.conf

if [ x"$platform" = "xUBUNTU6" -o x"$platform" = "xUBUNTU6_64" \
     -o x"$platform" = "xUBUNTU7" -o x"$platform" = "xUBUNTU7_64" \
     -o x"$platform" = "xUBUNTU8" -o x"$platform" = "xUBUNTU8_64" \
     -o x"$platform" = "xDEBIAN4.0" -o x"$platform" = "xDEBIAN4.0_64" ]; then
  if [ -e "/etc/init.d/sysklogd" ]; then
    /etc/init.d/sysklogd restart > /dev/null 2>&1 
  else 
    echo "Unable to restart syslog.  Please do it manually."
  fi
else 
  killall -HUP syslogd
fi
