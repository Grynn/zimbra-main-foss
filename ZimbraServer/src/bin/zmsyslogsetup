ID=`id -u`

if [ $ID -ne 0 ]; then
	echo "Run as root!"
	echo ""
	exit 1
fi

LOGHOST=`su - zimbra -c 'zmprov gacf | egrep "^zimbraLogHostname"'`

if [ x$LOGHOST = "x" ]; then
	TYPE="local"
else
	TYPE="remote"
	LOGHOST=`echo $LOGHOST | awk '{print $2}'`
fi

usage() {
	echo ""
	echo "$0: set up syslog.conf for local or remote logging"
	echo ""
	echo "Usage:"
	echo "	$0"
	echo ""
	exit 1
}

cp -f /etc/syslog.conf /etc/syslog.conf.bak

#cat /etc/syslog.conf | sed -e 's:\(^local0.*\):#\1:' > /tmp/syslog.zimbra
grep -v local0 /etc/syslog.conf > /tmp/syslog.zimbra

if [ $TYPE = "remote" ]; then
      echo "local0.info                @$LOGHOST" >> /tmp/syslog.zimbra
else
      echo "local0.info                -/var/log/zimbra.log" >> /tmp/syslog.zimbra
fi

egrep -v "^mail.*($LOGHOST|zimbra)" /tmp/syslog.zimbra > /tmp/syslog.zimbra2

if [ $TYPE = "remote" ]; then
      echo "mail.info                @$LOGHOST" >> /tmp/syslog.zimbra2
else
      echo "mail.info                -/var/log/zimbra.log" >> /tmp/syslog.zimbra2
fi

cp -f /tmp/syslog.zimbra2 /etc/syslog.conf

killall -HUP syslogd
