#!/bin/bash

if [ x`whoami` != xliquid ]; then
    echo Error: must be run as liquid user
	exit 1
fi

source `dirname $0`/lqshutil || exit 1
lqsetvars \
    liquid_home \
    liquid_log_directory

rewriteconfig() {
	if [ x$2 = "x" ]; then
		/opt/liquid/bin/lqmtaconfig antivirus > /dev/null 2>&1
	fi
}

#
# Main
#
case "$1" in
    'start')
		if [ ! -f ${liquid_home}/clamav/db/daily.cvd ]; then
			# Start with the files we ship.
			cp -f ${liquid_home}/clamav/db/daily.cvd.init \
				${liquid_home}/clamav/db/daily.cvd
			cp -f ${liquid_home}/clamav/db/main.cvd.init \
				${liquid_home}/clamav/db/main.cvd
			# Init the db
			${liquid_home}/clamav/bin/freshclam \
				--config-file=${liquid_home}/conf/freshclam.conf &
		fi
		rewriteconfig
		${liquid_home}/clamav/bin/freshclam \
			--config-file=${liquid_home}/conf/freshclam.conf -d --checks=12 \
		    >> ${liquid_log_directory}/freshclam.log 2>&1 &
		${liquid_home}/clamav/sbin/clamd \
			--config-file ${liquid_home}/conf/clamd.conf \
		    >> ${liquid_log_directory}/clamd.log 2>&1 &
        ;;

    'kill')
		cpid=`cat /opt/liquid/log/freshclam.pid`
        kill -TERM "$cpid" 2> /dev/null
		cpid=`cat /opt/liquid/log/clamd.pid`
        kill -TERM "$cpid" 2> /dev/null
        ;;

    'stop')
		cpid=`cat /opt/liquid/log/freshclam.pid`
        kill -TERM "$cpid" 2> /dev/null
		cpid=`cat /opt/liquid/log/clamd.pid`
        kill -TERM "$cpid" 2> /dev/null
		killall -TERM ${liquid_home}/clamav/bin/freshclam
		killall -TERM ${liquid_home}/clamav/sbin/clamd
        ;;
    
    'restart')
        $0 stop
        $0 start
        ;;
	
	'status')
		cpid=`cat /opt/liquid/log/clamd.pid`
        kill -0 "$cpid" 2> /dev/null
		exit $?
		;;
    
    *)
        echo "Usage: $0 start|stop|kill|restart|status"
        exit 1
        ;;
esac
