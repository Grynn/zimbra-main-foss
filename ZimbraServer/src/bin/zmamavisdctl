#!/bin/bash

if [ x`whoami` != xzimbra ]; then
    echo Error: must be run as zimbra user
	exit 1
fi

source `dirname $0`/zmshutil || exit 1
zmsetvars \
    zimbra_home \
    zimbra_log_directory

rewriteconfig() {
	if [ x$2 = "x" ]; then
		/opt/zimbra/bin/zmmtaconfig antispam > /dev/null 2>&1
	fi
}

#
# Main
#
case "$1" in
    'start')
		mount -t tmpfs | grep ${zimbra_home}/amavisd/tmp > /dev/null 2>&1
		if [ $? != 0 ]; then
			mount ${zimbra_home}/amavisd/tmp
		fi
		rewriteconfig
		if [ ! -f ${zimbra_home}/amavisd/.spamassassin/bayes_toks ]; then
			# Initial bayes seeding.
			cp -f ${zimbra_home}/amavisd/.spamassassin/init/* \
				${zimbra_home}/amavisd/.spamassassin
			chmod 644 ${zimbra_home}/amavisd/.spamassassin/bayes*
		fi
		${zimbra_home}/amavisd/sbin/amavisd -c \
			${zimbra_home}/conf/amavisd.conf &
        ;;

    'kill')
		cpid=`cat /opt/zimbra/log/amavisd.pid`
        kill -TERM "$cpid" 2> /dev/null
		sleep 2
		umount ${zimbra_home}/amavisd/tmp
        ;;

    'stop')
		cpid=`cat /opt/zimbra/log/amavisd.pid`
        kill -TERM "$cpid" 2> /dev/null
		killall -TERM ${zimbra_home}/amavisd/sbin/amavisd
		sleep 2
		umount ${zimbra_home}/amavisd/tmp
        ;;
    
    'restart')
        $0 stop
        $0 start
        ;;
	
	'status')
		cpid=`cat /opt/zimbra/log/amavisd.pid`
        kill -0 "$cpid" 2> /dev/null
		exit $?
		;;
    
    *)
        echo "Usage: $0 start|stop|kill|restart|status"
        exit 1
        ;;
esac
