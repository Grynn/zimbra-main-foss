#!/bin/bash

progdir=`dirname $0`

source `dirname $0`/zmshutil || exit 1

zmsetvars \
	liquid_home \
	liquid_server_hostname 

rewriteconfig() {
    /opt/liquid/bin/zmmtaconfig mta > /dev/null 2>&1
}

if [ $1 = "start" -o $1 = "reload" ]; then
	if [ x$2 = "x" ]; then
		rewriteconfig
	fi
fi

sudo ${liquid_home}/postfix/sbin/postalias /etc/aliases
sudo ${liquid_home}/postfix/sbin/postfix $@

