source `dirname $0`/zmshutil || exit 1
zmsetvars 

PIDFILE="/opt/zimbra/log/perdition.pid"

checkRunning() {
	if [ -f "$PIDFILE" ]; then
		PID=`cat /opt/zimbra/log/perdition.pid`
		if [ "x$PID" != "x" ]; then
			kill -0 $PID
			STATUS=$?
		fi
	else
		STATUS=1
	fi
}

start() {
	${zimbra_home}/bin/zmmtaconfig perdition
	${zimbra_home}/perdition/sbin/perdition.imap4 \
		--config_file=${zimbra_home}/conf/perdition.conf
}

stop() {
	kill -TERM ${PID}
}

checkRunning

case "$1" in 
	start)
		if [ $STATUS -ne 0 ]; then
			start
		else
			echo "Perdition is already running"
			exit 0
		fi
	;;
	stop)
		if [ $STATUS -eq 0 ]; then
			stop
		else
			echo "Perdition is not running"
			exit 0
		fi
	;;
	restart)
		$0 stop
		$0 start
	;;
	status)
		exit $STATUS
	;;
	*)
		echo "$0 start|stop|restart|status"
		exit 1
	;;
esac
