#!/bin/bash

if [ x`whoami` != xliquid ]; then
    echo Error: must be run as liquid user
	exit 1
fi

source `dirname $0`/lqshutil || exit 1
lqsetvars \
    liquid_home \
    liquid_log_directory

rewriteconfig() {
	if [ x$2 = "x" ]; then
		/opt/liquid/bin/lqmtaconfig sasl > /dev/null 2>&1
	fi
}

#
# Main
#
case "$1" in
    'start')
		mkdir -p ${liquid_home}/cyrus-sasl-2.1.21.LIQUID/state
		rewriteconfig
		${liquid_home}/cyrus-sasl-2.1.21.LIQUID/sbin/saslauthd -a liquid 
        ;;

    'kill')
		cpid=`cat ${liquid_home}/cyrus-sasl-2.1.21.LIQUID/state/saslauthd.pid`
        kill -TERM "$cpid" 2> /dev/null
        ;;

    'stop')
		cpid=`cat ${liquid_home}/cyrus-sasl-2.1.21.LIQUID/state/saslauthd.pid`
        kill -TERM "$cpid" 2> /dev/null
		killall -TERM ${liquid_home}/cyrus-sasl-2.1.21.LIQUID/sbin/saslauthd
        ;;
    
    'restart')
        $0 stop
        $0 start
        ;;
	
	'status')
		cpid=`cat ${liquid_home}/cyrus-sasl-2.1.21.LIQUID/state/saslauthd.pid`
        kill -0 "$cpid" 2> /dev/null
		exit $?
		;;
    
    *)
        echo "Usage: $0 start|stop|kill|restart|status"
        exit 1
        ;;
esac
