		"script"	=> [ "/opt/zimbra/postfix/sbin/postqueue" ],
		"user"		=> "zimbra",
	},
);

my %allhosts = ();
my $gothosts = 0;

my $thishost = `su - zimbra -c "zmlocalconfig -m nokey zimbra_server_hostname"`;
chomp $thishost;

sub runRemoteCommand {
	my $host = shift;
	my $command = shift;
	my $args = shift;

	print "Remote: HOST:$host $command $args\n";
}

sub runCommand {
	my $host = shift;
	my $command = shift;
	my $args = shift;
	my $user;

	if ($host ne $thishost) {
		runRemoteCommand($host, $command, $args);
		return;
	}

	my $cl;

	if (defined ($commands{$command}{script})) {
		$cl = $commands{$command}{script};
		$user = $commands{$command}{user};
	} else {
		my @a = split (' ', $args);
		my $arg = shift @a;
		$args = join(' ',@a);

		$user = $commands{$command}{args}{$arg}{user};

		if (defined ($commands{$command}{args}{$arg}{script})) {
			$cl = $commands{$command}{args}{$arg}{script};
		} else {
			print "ERROR: Unknown command $_\n";
			return;
		}
	}

	foreach my $cm (@$cl) {
		my $cmdstr = "$cm $args";
		if ($user ne "root") {
			$cmdstr = "su - $user -c \"$cmdstr\"";
		}
		if (open COMMAND, "$cmdstr $args |") {
			print "STARTCMD: $host $cmdstr\n";
			while (<COMMAND>) {
				print $_;
			}
			close COMMAND;
			print "ENDCMD: $host $cmdstr\n";
		} else {
			print "Can't run $cmdstr: $!\n\n";
		}
	}
}

sub getHostsByService {
	my $service = shift;

	my @hosts = ();

	if (!$gothosts) {
		open CMD, "su - zimbra -c 'zmprov gas'|" or return undef;
		my @hl = <CMD>;
		close CMD;
		chomp @hl;
		foreach my $h (@hl) {
			open CMD, "su - zimbra -c 'zmprov gs $h' | grep zimbraServiceEnabled | sed -e 's/zimbraServiceEnabled: //'|" or return undef;
			my @sl = <CMD>;
			close CMD;
			chomp @sl;
			foreach my $s (@sl) {
				$allhosts{$h}{$s} = $s;
			}
		}
		$gothosts = 1;
	}

	foreach my $h (keys %allhosts) {
		foreach my $s (keys %{ $allhosts{$h} }) {
			if ($s eq $service) {
				push @hosts, $h;
			}
		}
	}
	return \@hosts;
}

sub getHostList {
	my $hstring = shift;

	# Host format is either 
	#   HOST:h1[,HOST:h2...] and/or
	#   SERVICE:s1[SERVICE:s2,...]
	# The script will de-dup hosts

	my %hosts = ();

	my @hspecs = split (',', $hstring);
	foreach my $spec (@hspecs) {
		my ($type, $item) = split (':', $spec);
		if ($type eq "HOST") {
			if ($item eq "ALL") {
				my @h = sort keys %allhosts;
				return \@h;
			}
			$hosts{$item} = $item;
		} elsif ($type eq "SERVICE") {
			if ($item eq "ALL") {
				my @h = sort keys %allhosts;
				return \@h;
			}
			my $hl = getHostsByService($item);
			foreach (@$hl) {
				$hosts{$_} = $_;
			}
		} else {
			return undef;
		}
	}
	my @h = sort keys %hosts;
	return \@h;
}

while (<>) {
	chomp;
	my ($host, $command, $args) = split (' ', $_, 3);

	my $hostlist = getHostList ($host);

	if (!defined ($hostlist)) {
		print "ERROR: Invalid hostlist\n";
		last;
	}

	foreach my $h (@$hostlist) {
		runCommand ($h, $command, $args);
	}

}
