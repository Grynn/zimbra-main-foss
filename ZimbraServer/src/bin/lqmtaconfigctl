#!/bin/bash

if [ x`whoami` != xliquid ]; then
    echo Error: must be run as liquid user
	exit 1
fi

source `dirname $0`/lqshutil || exit 1
lqsetvars \
    liquid_home \
    liquid_log_directory

#
# Main
#
case "$1" in
    'start')
		${liquid_home}/bin/lqmtaconfig   \
		    >> ${liquid_log_directory}/lqmtaconfig.log 2>&1 &
        ;;

    'kill')
		cpid=`cat /opt/liquid/log/lqmtaconfig.pid`
        kill -TERM "$cpid" 2> /dev/null
        ;;

    'stop')
		cpid=`cat /opt/liquid/log/lqmtaconfig.pid`
        kill -TERM "$cpid" 2> /dev/null
        ;;
    
    'restart')
        $0 stop
        $0 start
        ;;
	
	'status')
		cpid=`cat /opt/liquid/log/lqmtaconfig.pid`
        kill -0 "$cpid" 2> /dev/null
		exit $?
		;;
    
    *)
        echo "Usage: $0 start|stop|kill|restart|status"
        exit 1
        ;;
esac
