#!/bin/sh

if [ x`whoami` != xliquid ]; then
	echo Error: must be run as liquid user
	exit 1
fi

source `dirname $0`/zmshutil || exit 1
zmsetvars \
	zimbra_home 

if [ ! -L ${zimbra_home}/openldap ]; then
	# No ldap - exit gracefully
	exit 0
fi

DEST=$1

if [ x$DEST = "x" ]; then
	DEST="${zimbra_home}/backup/ldap"
fi

mkdir -p $DEST

${zimbra_home}/openldap/sbin/slapcat > $DEST/ldap.bak
