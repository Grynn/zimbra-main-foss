source `dirname $0`/../bin/zmshutil || exit 1

replicaHost=$1

if [ x$replicaHost = "x" ]; then
	echo "Need hostname!"
	exit 1
fi

zmsetvars \
	zimbra_home \
	zimbra_server_hostname \
	ldap_host \
	ldap_port \
	ldap_root_password \
	zimbra_ldap_userdn

addReplicaToLdapConfig() {

	cat >> ${zimbra_home}/conf/slapd.conf <<EOF
replica uri=ldap://$replicaHost:389
	binddn="uid=zimbrareplication,cn=admins,cn=zimbra"
	bindmethod=simple credentials=${ldap_root_password}
EOF

}

addReplicaToLdapConfig
