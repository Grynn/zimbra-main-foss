source `dirname $0`/zmshutil || exit 1
zmsetvars \
    zimbra_log_directory \
    mysql_bind_address \
    mysql_data_directory \
    mysql_directory \
    mysql_read_buffer_size \
    mysql_sort_buffer_size \
    mysql_innodb_log_buffer_size \
    mysql_innodb_log_file_size \
    mysql_memory_percent \
    mysql_pidfile \
    mysql_port \
    mysql_socket \
    mysql_table_cache

#
# Available system memory in KB
#
memkb=`awk '/^MemTotal.*kB$/ { print $2; }' /proc/meminfo`

#
# Memory for use by MySQL
#
((mymem=memkb * mysql_memory_percent / 100 / 1024))

#
# Allocate 75% of memory that mysql can use to buffer pool.
#
((computed_innodb_buffer_pool_size = mymem * 75 / 100))

#
# Calculate the number of connections allowed.  The magic '2' is stack
# size per connection.  Ignoring key_buffer_size as we don't use
# MyISAM.
#
((non_buffer_pool_memory = mymem - computed_innodb_buffer_pool_size))
((per_connection_memory = 2 + mysql_sort_buffer_size + mysql_read_buffer_size + mysql_innodb_log_buffer_size))
((computed_max_connections = non_buffer_pool_memory / per_connection_memory))

#
# Not designed for systems with (< 100MB), but deal with it
# gracefully.
#
if [ ${computed_max_connections} -lt 2 ]; then
    computed_max_connections=2;
fi

#
# Write config to stdout
#
cat<<EOF

[mysqld]

basedir      = ${mysql_directory}
datadir      = ${mysql_data_directory}
socket       = ${mysql_socket}
pid-file     = ${mysql_pidfile}
bind-address = ${mysql_bind_address}
port         = ${mysql_port}

skip-external-locking

log-slow-queries = ${zimbra_log_directory}/myslow.log
long-query-time  = 1
log-long-format
log-queries-not-using-indexes
log-bin

thread_cache      = ${computed_max_connections}
max_connections   = ${computed_max_connections}

# We do a lot of writes, query cache turns out to be not useful.
query_cache_type = 0

sort_buffer_size = ${mysql_sort_buffer_size}M
read_buffer_size = ${mysql_read_buffer_size}M

# Increase the size of the table cache, since each mailbox has its
# own set of tables
table_cache = ${mysql_table_cache}

innodb_buffer_pool_size   = ${computed_innodb_buffer_pool_size}M
innodb_log_file_size      = ${mysql_innodb_log_file_size}M
innodb_log_buffer_size    = ${mysql_innodb_log_buffer_size}M
innodb_file_per_table

[mysqld_safe]

err-log = ${zimbra_log_directory}/mysqld.log

EOF
