#!/bin/bash

source `dirname $0`/zmshutil || exit 1

source_config_dir=/opt/zimbra/openldap/etc/openldap
config_dir=/opt/zimbra/conf

ldap_pw=$1

if [ x$ldap_pw = "x" ]; then
	zmlocalconfig -f -e -r zimbra_ldap_password
	zmlocalconfig -f -e -r ldap_root_password
else
	zmlocalconfig -f -e zimbra_ldap_password=$ldap_pw
	zmlocalconfig -f -e ldap_root_password=$ldap_pw
fi

zmsetvars zimbra_ldap_userdn zimbra_ldap_password ldap_root_password zimbra_server_hostname

root_sha=`/opt/zimbra/openldap/sbin/slappasswd -s ${ldap_root_password}`
zimbra_sha=`/opt/zimbra/openldap/sbin/slappasswd -s ${zimbra_ldap_password}`

# Update slapd.conf

sed -e "s|^rootpw.*|rootpw ${root_sha}|" \
	${source_config_dir}/slapd.conf > ${config_dir}/slapd.conf

# Update liquid.ldif

sed -e "s|^userPassword.*|userPassword: ${zimbra_sha}|" \
	${source_config_dir}/liquid.ldif > ${config_dir}/liquid.ldif

# Start ldap

ldap start

ldapmodify -a -c -w ${ldap_root_password} -D "${zimbra_ldap_userdn}" -x -f ${config_dir}/liquid.ldif
ldapmodify -a -c -w ${ldap_root_password} -D "${zimbra_ldap_userdn}" -x -f ${source_config_dir}/zimbra_mimehandlers.ldif

