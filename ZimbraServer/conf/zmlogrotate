/var/log/zimbra.log {
	daily
    missingok
    notifempty
    create 0644 zimbra zimbra
    postrotate
	killall -HUP syslogd
	killall -HUP `cat /opt/zimbra/log/swatch.pid`
	killall -HUP `cat /opt/zimbra/log/logswatch.pid`
    endscript
	compress
}

/opt/zimbra/log/myslow.log {
	daily
    missingok
    notifempty
    create 0644 zimbra zimbra
	compress
}

/opt/zimbra/log/logger_myslow.log {
	daily
	missingok
	notifempty
	create 0660 zimbra zimbra
	compress
	size 5000k
	rotate 3
} 
