ID=`id -u`

if [ $ID -ne 0 ]; then
	echo "Run as root!"
	echo ""
	exit 1
fi

TYPE=${1:-"local"}

usage() {
	echo ""
	echo "$0: set up syslog.conf for local or remote logging"
	echo ""
	echo "Usage:"
	echo "	$0 [local|remote <hostname>]"
	echo "		local - log locally (/var/log/zimbra.log)"
	echo "		remote - log remotely to <hostname>"
	echo ""
	exit 1
}

if [ $TYPE != "local" -a $TYPE != "remote" ]; then
	usage
fi

if [ $TYPE = "remote" ]; then
	LOGHOST=${2:-"none"}
	if [ $LOGHOST = "none" ]; then
		usage
	fi
fi

cp -f /etc/syslog.conf /etc/syslog.conf.bak

#cat /etc/syslog.conf | sed -e 's:\(^local0.*\):#\1:' > /tmp/syslog.zimbra
grep -v local0 /etc/syslog.conf > /tmp/syslog.zimbra

if [ $TYPE = "remote" ]; then
      echo "local0.info                @$LOGHOST" >> /tmp/syslog.zimbra
else
      echo "local0.info                /var/log/zimbra.log" >> /tmp/syslog.zimbra
fi

cp -f /tmp/syslog.zimbra /etc/syslog.conf

killall -HUP syslogd
