echo "Performing installation check"

for i in core mta store ldap snmp logger apache spell; do
	echo "Looking for $i"
	pkgs=`find /Library/Receipts/zimbra-${i}* -type d -maxdepth 0 | sort -r`
	first=1
	for pkg in $pkgs; do
		echo "Found $pkg"
		if [ $first -ne 1 ]; then
			echo Removing $pkg
			/bin/rm -rf $pkg
		fi
		first=2
	done
done
exit 0
