
# __DNS

dns: CUR_DEST_ROOT := $(DNS_DEST_ROOT)
dns: CUR_PACKAGE_SPEC := $(BUILD_ROOT)/zimbra-dns.spec
dns: CUR_PACKAGE_NAME := zimbra-dns
dns: $(PACKAGE_DIR) dns_stage dns_pkg_spec_$(PACKAGE_EXT)
	(cd $(CUR_DEST_ROOT); \
		$(PACKAGING_COMMAND) $(PACKAGING_OPTIONS) )

dns_pkg_spec_ccs:

dns_pkg_spec_pkg: $(BUILD_ROOT)/resources/zimbra-dns

dns_pkg_spec_deb: $(DNS_DEST_ROOT)/DEBIAN/control

$(DNS_DEST_ROOT)/DEBIAN: force
	mkdir -p $@
	cp $(PACKAGE_CONF_DIR)/Spec/Scripts/zimbra-dns.pre $@/preinst
	cat $(PACKAGE_CONF_DIR)/Spec/Scripts/zimbra-dns.post >> $@/postinst
	chmod 555 $@/*

$(DNS_DEST_ROOT)/DEBIAN/control: $(DNS_DEST_ROOT)/DEBIAN force
	cat $(PACKAGE_CONF_DIR)/Spec/zimbra-dns.deb | \
	sed -e 's/@@VERSION@@/$(VERSION_TAG)/' \
	-e 's/@@RELEASE@@/$(RELEASE)/' \
	-e 's/@@ARCH@@/$(ARCH)/' \
	-e 's/^Copyright:/$(RPMCOPYRIGHTSTR):/' \
	-e '/^%pre$$/ r zimbra-dns.pre' \
	-e '/^%post$$/ r zimbra-dns.post' > $@

dns_pkg_spec_rpm: $(BUILD_ROOT)/zimbra-dns.spec

$(BUILD_ROOT)/zimbra-dns.spec:
	cp $(PACKAGE_CONF_DIR)/Spec/Scripts/zimbra-dns.pre $(BUILD_ROOT)
	cp $(PACKAGE_CONF_DIR)/Spec/Scripts/zimbra-dns.post $(BUILD_ROOT)
	cat $(PACKAGE_CONF_DIR)/Spec/zimbra-dns.spec | \
		sed -e 's/@@VERSION@@/$(VERSION_TAG)/' \
		-e 's/@@RELEASE@@/$(RELEASE)/' \
		-e 's/@@DNS_PROVIDES@@/$(DNS_PROVIDES)/' \
		-e 's/^Copyright:/$(RPMCOPYRIGHTSTR):/' \
		-e '/^%pre$$/ r zimbra-dns.pre' \
		-e '/^%post$$/ r zimbra-dns.post' > $(BUILD_ROOT)/zimbra-dns.spec
	rm -f zimbra-dns.pre
	rm -f zimbra-dns.post
	(cd $(DNS_DEST_ROOT); find opt -type f -o -type l -maxdepth 2 \
		| sed -e 's|^|%attr(-, zimbra, zimbra) /|' >> \
		$(BUILD_ROOT)/zimbra-dns.spec )
	echo "%attr(-, zimbra, zimbra) /opt/zimbra/ldns-$(LDNS_VERSION)" >> \
		$(BUILD_ROOT)/zimbra-dns.spec
	echo "%attr(-, zimbra, zimbra) /opt/zimbra/unbound-$(UNBOUND_VERSION)" >> \
		$(BUILD_ROOT)/zimbra-dns.spec

dns_stage: $(DNS_COMPONENTS)

$(DNS_DEST_DIR):
	mkdir -p $@

$(DNS_DEST_DIR)/data/dns/ca:
	mkdir -p $@

$(DNS_DEST_DIR)/data/dns/trust:
	mkdir -p $@

$(DNS_DEST_DIR)/$(LDNS_DIR): $(DNS_DEST_DIR) $(DNS_DEST_DIR)/data/dns/ca $(DNS_DEST_DIR)/data/dns/trust
	@echo "*** Creating LDNS"
	(cd $(DNS_DEST_DIR); tar xfz $(LDNS_SOURCE).tgz;)

$(DNS_DEST_DIR)/$(UNBOUND_DIR): $(DNS_DEST_DIR)
	@echo "*** Creating Unbound"
	(cd $(DNS_DEST_DIR); tar xfz $(UNBOUND_SOURCE).tgz;)

