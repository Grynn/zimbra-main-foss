source: sourcetar ajaxtar

sourcetar: zcs-$(SOURCE_TAG)-src.tgz 

ajaxtar: AjaxTK-$(SOURCE_TAG)-src.tgz

AjaxTK-$(SOURCE_TAG)-src.tgz: $(PACKAGE_DIR)
	(cd $(BUILD_ROOT)/../ZimbraWebClient; tar czf $(PACKAGE_DIR)/AjaxTK-$(SOURCE_TAG)-src.tgz WebRoot/js/ajax src/com/zimbra/kabuki)

zcs-$(SOURCE_TAG)-src.tgz: $(PACKAGE_DIR)
	(cd $(BUILD_ROOT)/..; ln -s . zcs-$(SOURCE_TAG)-src; tar chzf $(PACKAGE_DIR)/zcs-$(SOURCE_TAG)-src.tgz --exclude ZimbraBuild/$(ARCH) --exclude logs --exclude ThirdParty --exclude ThirdPartyBuilds --exclude ZimbraCluster --exclude ZimbraMAPIInstaller --exclude ZimbraSync --exclude ZimbraIsync --exclude ZimbraBackup --exclude ZimbraLicenseExtension --exclude ZimbraHSM --exclude ZimbraLicenseTools --exclude ZimbraQA --exclude ZimbraServer/src/windows --exclude ZimbraServer/src/macosx --exclude ZimbraIMInterop --exclude ZimbraNetwork/ZimbraImportWizard --exclude ZimbraCustomerServices --exclude zcs-$(SOURCE_TAG)-src/zcs-$(SOURCE_TAG)-src zcs-$(SOURCE_TAG)-src; rm -f zcs-$(SOURCE_TAG)-src)
