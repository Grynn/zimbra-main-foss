<script>
    var showHidemore = function() {
        var e = document.getElementById('apt_dtls_div');
        if (e.style.display == 'none') {
            e.style.display = 'block';
            //document.getElementById('showHideLink').innerHTML="Less...";
        } else {
            e.style.display = 'none';
            //document.getElementById('showHideLink').innerHTML='More...';
        }
        return false;

    }
    var showHideRepeat = function() {
        var e = document.getElementById('apt_rpt_div');
        if (e.style.display == 'none') {
            e.style.display = 'block';
            //document.getElementById('showHideLink').innerHTML="Less...";
        } else {
            e.style.display = 'none';
            //document.getElementById('showHideLink').innerHTML='More...';
        }
        return false;

    }
</script>
