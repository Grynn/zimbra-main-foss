                <zm:forEachFolder var="fldr" skiproot="${false}" skipsystem="${false}" skiptrash="${true}">
                <c:if test="${fldr.isDocumentView}">
                        <option value="${fldr.id}">${fn:escapeXml(fldr.rootRelativePath)}</option>
                    </c:if>
                </zm:forEachFolder>
                
            </select>
            </form>
        </div>
        <a name="bc" style="padding:0px;margin:0px;"></a>
    </div>
</div>
<zm:forEachFolder var="folder" skiproot="${false}" skipsystem="${false}" skiptrash="${true}">
    <c:if test="${folder.isDocumentView}">
        <mo:overviewFolder folder="${folder}" types="briefcase"/>
        <mo:doFolderTree skiproot="${true}" parentid="${folder.id}" skipsystem="false"/>
    </c:if>
</zm:forEachFolder>
<div class="Toolbar table">
