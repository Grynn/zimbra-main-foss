            <c:set var="weekDays" value="${dateSymbols.weekdays}"/>
            <c:set var="dow" value="${mailbox.prefs.calendarFirstDayOfWeek}"/>
             <select name="zimbraPrefCalendarFirstdayOfWeek" id="fdow" style="width:100%;padding:0px !important;margin:0px !important;overflow:hidden;">
