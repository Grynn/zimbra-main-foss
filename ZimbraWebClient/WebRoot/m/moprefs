                <fmt:message var="displayName" bundle='${AjxMsg}' key="${tz.id}"/>
                <option
                        <c:if test="${tzpref eq tz.id}">selected</c:if>
                        value="${fn:escapeXml(tz.id)}">${fn:escapeXml(displayName)}</option>
