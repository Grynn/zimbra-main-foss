    var d = document.getElementById('statusdiv');
    var msg = (d) ? d.innerHTML : null;
    if (msg != null) {
        parent.showLoadingMsg(null, false);
        if(d.className && d.className.indexOf("Status") > -1){
            parent.lfr(self.GC().innerHTML,self.frameElement.id);nojs = true;
        }else{
            nojs = true;
        }
    }
}
